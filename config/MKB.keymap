        bt_layer {
            label = "BT";
            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4      &bt BT_CLR_ALL  &trans    &trans     &trans     &trans     &trans
&trans      &trans        &trans        &trans        &trans        &trans            &trans          &trans    &trans     &trans     &trans     &trans
&trans      &trans        &trans        &trans        &trans        &trans            &trans          &trans    &trans     &trans     &trans     &trans
&trans      &trans        &trans                      &trans        &trans            &trans          &trans               &trans     &trans     &trans
&kp LEFT    &kp UP        &kp SPACE     &kp DOWN      &kp RIGHT                                       &kp HOME  &kp PG_UP  &kp ENTER  &kp PG_DN  &kp END
                                        &kp A                                                                   &kp B
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        layer_6 {
            bindings = <
&trans  &kp F1   &kp F2   &kp F3  &kp F4  &kp F5       &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp LS(N9)        &kp LS(N0)         &trans
&trans  &kp F6   &kp F7   &kp F8  &kp F9  &kp F10      &kp NUMBER_4  &kp N5        &kp NUMBER_6  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &trans
&trans  &kp F11  &kp F12  &trans  &trans  &trans       &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &trans            &trans             &trans
&trans  &trans   &trans           &trans  &trans       &kp NUMBER_0  &trans                      &trans            &trans             &trans
&trans  &trans   &trans   &trans  &trans                             &trans        &trans        &trans            &trans             &trans
                          &trans                                                   &trans
            >;
        };
